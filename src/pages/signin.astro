---
import Layout from "~/components/Layout.astro";
import SigninForm from "~/components/forms/SigninForm.astro";

if (Astro.locals.user) {
  return Astro.redirect("/");
}
---

<Layout>
  <main class="max-w-md mx-auto my-20 p-4">
    <h1 class="text-4xl font-bold mb-4">Sign in</h1>
    <SigninForm />
    <p>
      Dont have an account?
      <a class="mt-4 text-center underline inline-flex hover:text-blue-600" href="/signup">Create an account</a>
    </p>
  </main>
</Layout>
