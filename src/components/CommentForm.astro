---
import Avatar from "./Avatar.astro";
const user = Astro.locals.user;
---

<form method="POST" class="flex gap-3">
  <Avatar name={user?.name || ""} />
  <div class="flex flex-col flex-1">
    <label for="body" class="block sr-only text-sm font-medium leading-6 text-gray-900">Write your comment</label>
    <textarea
      id="body"
      name="body"
      rows="3"
      class="outline-none ring-2 rounded flex w-full ring-gray-400 p-2 focus:ring-indigo-600 mb-4"></textarea>
    <div class="flex justify-end">
      <button type="submit" class="rounded-md bg-indigo-600 text-white px-4 py-1 inline-block">Save</button>
    </div>
  </div>
</form>
